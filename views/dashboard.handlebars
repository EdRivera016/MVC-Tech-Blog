{{!-- views/dashboard.handlebars --}}
<div class="container">
  <div class="row">
    <div class="col-md-8 offset-md-2">
      <h2 class="my-4">Dashboard</h2>
      <div class="mb-3">
        <a href="/posts/new" class="btn btn-primary">Create New Post</a>
      </div>
      {{#if posts.length}}
        {{#each posts}}
          <div class="card mb-4">
            <div class="card-body">
              <h3 class="card-title">{{title}}</h3>
              <p class="card-text">{{content}}</p>
              <p class="text-muted">Posted on {{date_created}}</p>
              <a href="/posts/edit/{{id}}" class="btn btn-secondary">Edit</a>
              <a href="/posts/delete/{{id}}" class="btn btn-danger">Delete</a>
            </div>
          </div>
        {{/each}}
      {{else}}
        <p>No posts available.</p>
      {{/if}}
    </div>
  </div>
</div>
